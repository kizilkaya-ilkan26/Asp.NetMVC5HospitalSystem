@model Hospital.Models.Entity.Mesaj
@{
    ViewBag.Title = "MesajGetir";
    Layout = "~/Views/Shared/Lab.cshtml";
}

@using (Html.BeginForm("MesajDüzenle", "LabMesaj", FormMethod.Post))
{
    <form class="u-form-group" method="post">
        <div style="padding-left:80px;padding-top:20px">

            @Html.HiddenFor(t => t.ID, new { @class = "form-control" })
            @Html.Label("Mesaj".ToString())
            @Html.TextBoxFor(t => t.MESAJ1, new { @class = "form-control" })

            <div style="padding-top:10px"></div>
            <button class="btn btn-info" id="Btn">
                Mesajı Yolla
            </button>
        </div>

    </form>
}

