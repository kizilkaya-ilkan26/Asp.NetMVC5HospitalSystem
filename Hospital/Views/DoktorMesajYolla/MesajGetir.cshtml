@model Hospital.Models.Entity.Mesaj
@{
    ViewBag.Title = "MesajGetir";
    Layout = "~/Views/Shared/Doctor.cshtml";
}

@using (Html.BeginForm("MesajDüzenle", "DoktorMesajYolla", FormMethod.Post))
{
    <form class="u-form-group" method="post">
        <div style="padding-left:80px;padding-top:20px">

            @Html.HiddenFor(t => t.ID, new { @class = "form-control" })
            @Html.LabelFor(t => t.HASTA)
            @Html.TextBoxFor(t => t.HASTA, new { @class = "form-control" })
            @Html.LabelFor(t => t.ALICI)
            @Html.TextBoxFor(t => t.ALICI, new { @class = "form-control" })
            @Html.LabelFor(t => t.KONU)
            @Html.TextBoxFor(t => t.KONU, new { @class = "form-control" })
            @Html.Label("Mesaj".ToString())
            @Html.TextBoxFor(t => t.MESAJ1, new { @class = "form-control" })


            <div style="padding-top:10px"></div>
            <button class="btn btn-info" id="Btn">
                Mesaj Cevapla
            </button>
        </div>

    </form>
}

